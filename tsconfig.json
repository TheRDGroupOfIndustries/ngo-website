{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["schemaTypes/**/*.js", "sanity.config.js"],
  "exclude": ["node_modules"]
}
